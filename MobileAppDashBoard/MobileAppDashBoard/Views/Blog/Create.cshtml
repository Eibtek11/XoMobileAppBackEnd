@{
    Layout = "";
}
@model BL.TbQuestionsMCQLast
<form asp-controller="Blog" asp-action="Create"
      method="post" class="form-horizontal" role="form">

    <div class="form-horizontal">
        <div class="form-group">

            <label asp-for="QestionSyntax"
                   class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QestionSyntax" class="form-control" />
            </div>
            <label asp-for="QuestionAnswer"
                   class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionAnswer" class="form-control" />
            </div>

            <label asp-for="Tags"
                   class="col-md-2 control-label"></label>
            
            <input name="Tags[]" class="form-control" />
        </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>